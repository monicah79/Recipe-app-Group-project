<h1 class="public-recipe-heading">Public Recipes</h1>

<% @recipes.each do |recipe| %>
  <div class="">
  <div>
  <div class"cards-container">
   <div class="cards">
      <div class="recipe">
        <h2><%= recipe.name %></h2>
        <p>By: <%= recipe.user.name %></p>
      </div>
      <div class="slot ">
        <p class="ingredients-total">Total food items: <%= @recipe_ingredients.where(recipe: recipe).count %></p>
        <p class="ingredients-total">Total Price: $ <%= @recipe_ingredients.where(recipe: recipe).map {|value| value.food.price * value.quantity}.sum %></p>
      </div>
   </div>
  </div>
    
  <% end %>
  </div>
  </div>
 